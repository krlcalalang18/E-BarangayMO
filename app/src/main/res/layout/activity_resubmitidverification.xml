<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- Select ID Text Field with Dropdown Icon -->
    <EditText
        android:id="@+id/etSelectID"
        android:layout_width="341dp"
        android:layout_height="51dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/white"
        android:drawableEnd="@drawable/ic_dropdown"
        android:hint="Select ID"
        android:padding="16dp"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Upload Photo of Valid ID -->
    <Button
        android:id="@+id/btnUploadValidID"
        android:layout_width="354dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Upload photo of Valid ID"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etSelectID" />

    <!-- Upload Photo of Yourself Holding your ID -->
    <Button
        android:id="@+id/btnUploadHoldingID"
        android:layout_width="356dp"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        android:text="Upload photo of Yourself Holding your ID"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUploadValidID" />

    <!-- Image Placeholder for Infographic -->
    <ImageView
        android:id="@+id/ivInfographic"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/infographic_placeholder"
        app:layout_constraintTop_toBottomOf="@id/btnUploadHoldingID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:contentDescription="Infographic Placeholder" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/ivInfographic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
