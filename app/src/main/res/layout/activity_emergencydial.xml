<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivEmergencyIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_emergency"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:contentDescription="Emergency Icon" />

    <TextView
        android:id="@+id/tvEmergencyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Dial"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/ivEmergencyIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnEmergencyDial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dial Emergency"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/tvEmergencyTitle"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white" />

</RelativeLayout>
